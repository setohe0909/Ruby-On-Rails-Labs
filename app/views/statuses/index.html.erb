<div class="page-header">
  <h1>Todos los estados</h1>
</div>

<% @statuses.each do  |status| %>
  <div class="status">
    <strong><%= status.nombre%></strong>
    <p><%= status.contenido%></p>
    <div>
      <%= link_to "Hace "+ time_ago_in_words(status.created_at), status %>
      <span class="admin">
        | <%= link_to "Editar", status_path(status)%> |
        <%= link_to "Borrar", status, method: :delete, data:{confirm:"Â¿Estas seguro de borrar este estado?"} %>
      </span>
    </div>
  </div>
<% end %>
<!DOCTYPE html>
<html>
<head>
  <title>Ruby Social Network</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
	<div class="container">
		<a href="#" class="navbar-brand">Ruby Social Network</a>
		 <ul class="nav navbar-nav">
        	<li class="active"><%= link_to "Status", timeline_path %></li>
     </ul>
     <ul class="nav navbar-nav pull-right">
        <% if user_signed_in? %>
          <li><%= link_to current_user.nombre_completo, edit_user_registration_path %></li>
          <li><%= link_to "Logout", destruir_path, method: :delete %></li>
        <% else %>
          <li><%= link_to "Register", registrar_path %></li>
          <li><%= link_to "Log in", comenzar_path %></li>
        <% end %>
     </ul>
	</div>
</div>

<div class="container">

  <% flash.each do |type, message| %>
    <div class="alert <%= flash_class type %> alert-dismissable">
       <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
       <%= message %>
     </div>
  <% end %>

  <%= yield %>
</div>

</body>
</html>
=